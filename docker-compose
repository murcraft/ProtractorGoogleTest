version: '2'
services:
  hub:
    image: selenium/hub:3.2.0-actinium
    ports:
      - "4444:4444"

  chrome:
    image: selenium/node-chrome:3.2.0-actinium
    volumes:
      - /dev/urandom:/dev/random
    depends_on:
      - hub
    environment:
      - HUB_PORT_4444_TCP_ADDR=hub
      - HUB_PORT_4444_TCP_PORT=4444

